{
  "name": "@xpack/xpm-liquid",
  "version": "1.2.1",
  "description": "The liquid substitutions code used by xpm &amp; relatives",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "xpm",
    "liquid",
    "liquidjs"
  ],
  "scripts": {
    "fix": "ts-standard --fix src",
    "compile": "tsc -p ./",
    "compile-watch": "tsc -watch -p ./",
    "outdated": "npm outdated",
    "update": "npm update",
    "install ": "npm install",
    "version-patch": "npm version patch",
    "version-minor": "npm version minor",
    "pack": "npm pack",
    "git-log": "git log --pretty='%cd * %h %s' --date=short",
    "lint": "ts-standard src",
    "test": "npm run test-tap100 -s",
    "test-tap100": "tap --ts --reporter=classic --timeout 300 --100 \"src/tests/tap/*.ts\"",
    "test-coverage": "tap --ts --coverage --reporter=classic --timeout 600 --no-check-coverage \"src/tests/tap/*.ts\"",
    "test-tap": "tap --ts --reporter=classic --timeout 300 --no-coverage \"src/tests/tap/*.ts\"",
    "tap": "tap --ts --reporter=spec --timeout 300 --no-coverage",
    "pretest": "npm run compile && npm run lint",
    "prepublish": "npm run compile && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xpack/xpm-liquid-ts.git"
  },
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "https://github.com/ilg-ul/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpack/xpm-liquid-ts/issues/"
  },
  "homepage": "https://github.com/xpack/xpm-liquid-ts/",
  "dependencies": {
    "@xpack/logger": "^5.0.2",
    "liquidjs": "^9.42.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.68",
    "@types/tap": "^15.0.7",
    "tap": "^16.3.0",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">12.0"
  }
}
